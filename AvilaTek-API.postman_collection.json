{
  "info": {
    "_postman_id": "avila-tek-api-collection-001",
    "name": "AvilaTek E-commerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección para probar la API de AvilaTek E-commerce. Incluye registro, login, productos y órdenes."
  },
  "variable": [
    { "key": "host", "value": "http://localhost:3000" },
    { "key": "jwt", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{host}}/auth/register", "host": [ "{{host}}" ], "path": [ "auth", "register" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@avilatek.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if (json.data && json.data.token) {",
              "    pm.collectionVariables.set('jwt', json.data.token);",
              "    pm.environment.set('jwt', json.data.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{host}}/auth/login", "host": [ "{{host}}" ], "path": [ "auth", "login" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@avilatek.com\",\n  \"password\": \"password123\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Users - Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": { "raw": "{{host}}/users/profile", "host": [ "{{host}}" ], "path": [ "users", "profile" ] }
      },
      "response": []
    },
    {
      "name": "Products - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": { "raw": "{{host}}/products", "host": [ "{{host}}" ], "path": [ "products" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop Gaming\",\n  \"description\": \"Laptop de alto rendimiento\",\n  \"price\": 1299.99,\n  \"stock\": 10\n}"
        }
      },
      "response": []
    },
    {
      "name": "Products - List All",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
        "url": { "raw": "{{host}}/products", "host": [ "{{host}}" ], "path": [ "products" ] }
      },
      "response": []
    },
    {
      "name": "Products - List Available",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
        "url": { "raw": "{{host}}/products/available", "host": [ "{{host}}" ], "path": [ "products", "available" ] }
      },
      "response": []
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "url": { "raw": "{{host}}/orders", "host": [ "{{host}}" ], "path": [ "orders" ] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    { \"productId\": \"<REPLACE_WITH_PRODUCT_ID>\", \"quantity\": 1 }\n  ]\n}"
        }
      },
      "response": []
    },
    {
      "name": "Orders - List My Orders",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{jwt}}" } ],
        "url": { "raw": "{{host}}/orders", "host": [ "{{host}}" ], "path": [ "orders" ] }
      },
      "response": []
    }
  ]
} 